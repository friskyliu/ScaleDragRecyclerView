<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.alpha.f.view.scalerecyclerview.ScaleLinearRecyclerView
        android:id="@+id/test_rv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#aaaaaa"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        app:item_size="@dimen/item_size_h"
        />

    <com.alpha.f.view.scalerecyclerview.ScaleLinearRecyclerView
        android:id="@+id/test_rv_alpha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/test_rv"
        android:background="#cccccc"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        app:item_size="@dimen/item_size_h"
        />

    <com.alpha.f.view.scalerecyclerview.ScaleLinearRecyclerView
        android:id="@+id/test_rv_small"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/test_rv_alpha"
        android:background="#aaaaaa"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        app:item_size="@dimen/item_size_h"
        />

    <com.alpha.f.view.scalerecyclerview.ScaleLinearRecyclerView
        android:id="@+id/test_rv_v"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/test_rv_small"
        android:background="#cccccc"
        app:item_size="@dimen/item_size_v"
        app:orientation="vertical"
        />
</RelativeLayout>